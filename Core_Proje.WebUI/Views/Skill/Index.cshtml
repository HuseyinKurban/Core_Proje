@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int sayac = 0;
}



<div class="row">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">Yetenek Listesi</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Başlık</th>
                            <th scope="col" class="sort" data-sort="status">Oran</th>
                            <th scope="col">Sil</th>
                            <th scope="col" class="sort" data-sort="completion">Düzenle</th>

                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            sayac++;
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@sayac</span>
                                        </div>
                                    </div>
                                </th>
                                <td class="budget">
                                   @item.Title
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="completion mr-2">@item.Value%</span>
                                        <div>
                                            <div class="progress">
                                                <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="avatar-group">

                                        <a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-danger">Sil</a>
                                    </div>
                                </td>
                                <td>
                                    <div class="avatar-group">

                                        <a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-info">Güncelle</a>
                                    </div>
                                </td>
                     
                            </tr>
                        }
                        
                     
                    </tbody>
                </table>
               
            </div>
           
        </div>
        <a href="/Skill/AddSkill" class="btn btn-primary">Yeni Yetenek Ekle</a>
    </div>
</div>
