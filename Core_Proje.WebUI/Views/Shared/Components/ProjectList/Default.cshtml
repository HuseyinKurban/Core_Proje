@model List<Portfolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Order Status</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th> Ana Görsel </th>
                                <th> Proje Adı </th>
                                <th> Url </th>
                                <th> Fiyat </th>
                                <th> Tamamlanma</th>
                                <th> Durum </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PortfolioId</td>
                                    <td><img src="@item.ImageUrl" /></td>
                                    <td>@item.Name</td>
                                    <td><a target="_blank" href="@item.ProjectUrl">@item.ProjectUrl</a></td>
                                    <td>@item.Price</td>
                                    <td>%@item.Value</td>


                                    <td>
                                        @if (item.Value == 100)
                                        {
                                            <div class="badge badge-outline-success">Tamamlandı</div>
                                        }
                                        else if (item.Value >= 50 && item.Value <= 99)
                                        {
                                            <div class="badge badge-outline-info">Devam Ediyor</div>
                                        }
                                        else if (item.Value >= 1 && item.Value < 50)
                                        {
                                            <div class="badge badge-outline-warning">İlerlemeye Başlandı</div>
                                        }
                                        else if (item.Value == 0)
                                        {
                                            <div class="badge badge-outline-danger">Başlanmadı</div>
                                        }



                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>