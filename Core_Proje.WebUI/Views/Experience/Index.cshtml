@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int sayac = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimler</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            sayac++;
                            <tr>
                                <td>@sayac</td>
                                <td>@item.Name</td>
                                <td>@item.Date</td>
                                <td><a class="btn btn-outline-danger" href="/Experience/DeleteExperience/@item.ExperienceId">Sil</a></td>
                                <td><a class="btn btn-outline-success" href="/Experience/UpdateExperience/@item.ExperienceId">Güncelle</a></td>
                            </tr>
                        }
                       
                  
                    </tbody>
                </table>
                <a class="btn btn-outline-info" href="/Experience/AddExperience">Yeni Deneyim Ekle</a>
            </div>
        </div>
    </div>
</div>