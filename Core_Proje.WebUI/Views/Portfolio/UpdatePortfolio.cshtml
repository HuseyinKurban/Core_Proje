@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card">

    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="PortfolioId" />
            <label>Proje Adı</label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-warning"></span>
            <br />
            <label>Görsel 1</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-warning"></span>
            <br />
            <label>Görsel 2</label>
            <input type="text" asp-for="ImageUrl2" class="form-control" />
            <span asp-validation-for="ImageUrl2" class="text-warning"></span>
            <br />
            <label>Proje Url</label>
            <input type="text" asp-for="ProjectUrl" class="form-control" />
            <br />
            <label>Platform</label>
            <input type="text" asp-for="Platform" class="form-control" />
            <br />
            <label>Tamamalanma Oranı</label>
            <input type="text" asp-for="Value" class="form-control" />
            <span asp-validation-for="Value" class="text-warning"></span>
            <br />
            <label>Fiyat</label>
            <input type="text" asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-warning"></span>
            <br />
            <label>Image1</label>
            <input type="text" asp-for="Image1" class="form-control" />
            <br />
            <label>Image2</label>
            <input type="text" asp-for="Image2" class="form-control" />
            <br />
              <label>Image3</label>
            <input type="text" asp-for="Image3" class="form-control" />
            <br />
            <label>Image4</label>
            <input type="text" asp-for="Image4" class="form-control" />
            <br />
            <button class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>


